<%= render "devise/shared/error" , obj: @room %>
<div class="box">
  <div class="box-inner">
    <h3 style="text-align: center;">予約フォーム</h3>


    <% if @room.room_image.attached? %>
      <div class="room_image">
        <%= image_tag @room.room_image , class:"edit_room_image"%>
      </div>
    <% end %>
    <table>
      <tr>
        <th>ルーム名</th>
        <td><%= @room.room_name%></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @room.adress %></td>
      </tr>
      <tr>
        <th>値段</th>
        <td><%= @room.charge %>/日</td>
      </tr>
      <tr>
        <th>ルーム紹介</th>
        <td>
          <div class="edit-room-introduction">
            <%= @room.room_introduction %>
          </div>
        </td>
      </tr>


  <%= form_with url: "/reservations/:id/confirm",  local: true  do |f| %>
      <tr>
        <th><%= f.label :start_day ,"開始日" %></th>
        <td>
            <div class="box-email">
            <%= f.date_field :start_day  %>
          </div>
        </td>
      </tr>

      <tr>
        <th><%= f.label :end_day ,"終了日" %></th>
        <td>
          <div class="box-email">
            <%= f.date_field :end_day %>
          </div>
        </td>
      </tr>

      <tr>
        <th><%= f.label :people ,"人数" %></th>
        <td>
          <div class="box-email">
            <%= f.number_field :people %>
          </div>
        </td>
      </tr>

    </table>
    <p>
      <div class="box-login">
        <%= f.submit "確認画面へ!" %>
      </div>
    </p>
  </div>
  <% end %>

    <p style="text-align: center;">
      <%= link_to "Top" , "/" %>
    </p>
  </div>
</div>
